        <h1 style="padding-left: 30%;color:rgb(248, 248, 248)" class="heading">Online shoe catalogue</h1>

        <label for=""><span style="color: rgba(255, 255, 255, 0.733);"><small>Search whats in
                    stock!!</small></span></label>
        <div class="ui search">
            <div class="ui icon input">
                <input class="prompt" type="text" name="search_all" placeholder="Search shoes...">
                <i style="color: red;" class="search icon"></i>
            </div>
            <div class="results"></div>
        </div>
        <form action="/stock" method="POST">
            <div class="ui four column grid">
                <div class="column">
                </div>
                <div class="column">
                    <div style="padding-top: 5%;" class="color-filter">
                        <div class="ui selection dropdown">
                            <input type="hidden" name="color">
                            <i class="dropdown icon"></i>
                            <div class="default text">Colors</div>
                            <div class="menu">
                                {{#each colors}}
                                <div class="item" data-value="{{colour}}">{{colour}}</div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="column">
                    <div style="padding-top: 5%;" class="size-filter">
                        <div class="ui selection dropdown">
                            <input type="hidden" name="brand">
                            <i class="dropdown icon"></i>
                            <div class="default text">Brand</div>
                            <div class="menu">
                                {{#each brands}}
                                <div class="item" data-value="{{brand}}">{{brand}}</div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="column">
                    <div style="padding-top: 5%;" class="size-filter">
                        <div class="ui selection dropdown">
                            <input type="hidden" name="size">
                            <i class="dropdown icon"></i>
                            <div class="default text">Size</div>
                            <div class="menu">
                                {{#each size}}
                                <div class="item" data-value="{{size}}">{{size}}</div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="column">
                        <div style="padding-top: 5%;padding-left:0%" class="">
                            <button type="submit" class="positive ui button">
                                <i class="search icon"></i>
                                Search
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>

        <div style="width: 70%;padding-left:" class="">
            <div class="ui three doubling stackable cards">
                {{#each results}}
                <div class="ui card">
                    <div class="image">

                        <div class="ui placeholder">
                            <div class="ui blue ribbon label">
                                <img src="https://img.icons8.com/ios-filled/64/000000/sneakers.png"> Mens shoes
                            </div>
                            <div class="square image">

                                <img class="ui image" src="/media/vans.jpeg">
                            </div>
                        </div>
                    </div>
                    <div class="content">
                        <div class="ui placeholder">
                            <div class="header">
                                <div class="very short line">
                                    <h3>{{brand}}</h3>
                                </div>
                                <div class="medium line">
                                    <h4>R {{price}} </h4>
                                </div>
                            </div>
                            <div class="paragraph">
                                <div class="short line">
                                    <h5>Stock: 2</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="extra content">
                        <div class="ui primary button">Buy</div>
                        <div class="ui button">Remove</div>
                    </div>
                </div>
                {{/each}}

